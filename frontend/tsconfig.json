{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["DOM"],
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "./**/*.js",
    "./dist/**/*",
    "node_modules"
  ]
}
