{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@test-utils": ["../test-utils/index.ts"]
    }
  },
  "exclude": [
    "./**/*.js",
    "./dist/**/*"
  ]
}
